<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_alignParentTop="true">
    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_search_bar"
        />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/circle_profile_preloader"
        android:contentDescription="@string/collaborators"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@color/text_search_bar_opacity"
        >

        <View
            android:id="@+id/button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/sidebar_icon"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            />


        <View
            android:id="@+id/v"
            android:layout_toLeftOf="@id/button"
            android:layout_toStartOf="@id/button"
            android:layout_width="0.5dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/opaque_black_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/v"
            android:layout_toStartOf="@id/v"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            >
            <View
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/sidebar_icon"
                android:padding="5dp"
                />

            <View
                android:id="@+id/details"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@color/sidebar_icon"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_below="@id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/img_status_black"
        />
</RelativeLayout>
